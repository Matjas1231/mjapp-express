{
    "compilerOptions": {
      "target": "es2022",                          
      "module": "commonjs",                    
      "lib": ["es5", "es6"],                     
      "allowJs": true,
      "outDir": "./build",                          
      "rootDir": "./src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}